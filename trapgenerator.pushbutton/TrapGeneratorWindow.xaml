<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parametrische Trap Generator" 
        Height="950" Width="520"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="Trap Afmetingen" 
                           FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- Afmetingen -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Hoogte (mm):" FontWeight="SemiBold"/>
                    <TextBox x:Name="hoogte_input" Margin="0,5,0,12" 
                             TextChanged="on_input_changed"/>
                    
                    <TextBlock Text="Breedte (mm):" FontWeight="SemiBold"/>
                    <TextBox x:Name="breedte_input" Margin="0,5,0,12"/>
                    
                    <TextBlock Text="Totale Lengte (mm):" FontWeight="SemiBold"/>
                    <TextBox x:Name="lengte_input" Margin="0,5,0,12"/>
                    
                    <TextBlock Text="Optrede (mm):" FontWeight="SemiBold"/>
                    <TextBox x:Name="optrede_input" Margin="0,5,0,12" 
                             TextChanged="on_input_changed"/>
                    
                    <TextBlock Text="Aantrede (mm):" FontWeight="SemiBold"/>
                    <TextBox x:Name="aantrede_input" Margin="0,5,0,12" 
                             TextChanged="on_input_changed"/>
                </StackPanel>
                
                <!-- Berekeningen -->
                <Border Background="#F5F5F5" 
                        BorderBrush="#CCCCCC" BorderThickness="1"
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Berekeningen" FontWeight="Bold" 
                                      FontSize="13" Margin="0,0,8,8"/>
                            <Button x:Name="btn_info" Content="i" Width="20" Height="20" 
                                    FontSize="12" ToolTip="Bouwbesluit informatie" 
                                    Click="toon_bouwbesluit_info" Background="#0078D7" Foreground="White"
                                    FontWeight="Bold" FontFamily="Georgia" VerticalAlignment="Top" Margin="0,-2,0,0"
                                    Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="aantal_treden" FontSize="12"/>
                        <TextBlock x:Name="werkelijke_optrede" Margin="0,5,0,0" FontSize="12"/>
                        <TextBlock x:Name="blondel_check" Margin="0,5,0,0" 
                                  FontWeight="Bold" FontSize="12"/>
                    </StackPanel>
                </Border>
                
                <!-- Type en stijl -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Type Trap:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="trap_type" Margin="0,0,0,12" SelectionChanged="on_trap_type_changed"/>
                    
                    <!-- L-trap opties -->
                    <StackPanel x:Name="bordes_panel" Visibility="Collapsed" Margin="0,0,0,12">
                        <TextBlock Text="Bordes na trede nr:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="bordes_na_trede" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Draairichting:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="draairichting" Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <!-- U-trap opties -->
                    <StackPanel x:Name="utrap_panel" Visibility="Collapsed" Margin="0,0,0,12">
                        <TextBlock Text="Bordes na trede nr:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="utrap_bordes_na_trede" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Bordes diepte (mm):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="utrap_bordes_diepte" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Tussenruimte (mm):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="utrap_tussenruimte" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Draairichting:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="utrap_draairichting" Margin="0,0,0,0"/>
                    </StackPanel>
                    
                    <TextBlock Text="Materiaal Treden:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="materiaal_type" Margin="0,0,0,12"/>
                    
                    <TextBlock Text="Stijl:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="trap_style" Margin="0,0,0,12"/>
                    
                    <!-- Looplijn optie -->
                    <CheckBox x:Name="toon_looplijn" Content="Toon looplijn in plattegrond" IsChecked="True" Margin="0,0,0,5"/>
                </StackPanel>
                
                <!-- Trapbomen -->
                <Border Background="#F0F5F0" 
                        BorderBrush="#C0D0C0" BorderThickness="1"
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Trapbomen" FontWeight="Bold" 
                                  FontSize="13" Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <CheckBox x:Name="trapboom_links" Content="Trapboom links" IsChecked="True" Width="120" Margin="0,0,20,0"
                                      Checked="on_trapboom_changed" Unchecked="on_trapboom_changed" VerticalAlignment="Center"/>
                            <CheckBox x:Name="trapboom_rechts" Content="Trapboom rechts" IsChecked="True"
                                      Checked="on_trapboom_changed" Unchecked="on_trapboom_changed" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel x:Name="trapboom_details">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,5,8">
                                    <TextBlock Text="Breedte (mm):" FontSize="11"/>
                                    <TextBox x:Name="trapboom_breedte" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Margin="5,0,0,8">
                                    <TextBlock Text="Hoogte (mm):" FontSize="11"/>
                                    <TextBox x:Name="trapboom_hoogte" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="Materiaal:" FontSize="11"/>
                            <ComboBox x:Name="trapboom_materiaal" FontSize="11" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Leuning opties -->
                <Border Background="#F0F0F5" 
                        BorderBrush="#C0C0D0" BorderThickness="1"
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Leuningen" FontWeight="Bold" 
                                  FontSize="13" Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <CheckBox x:Name="leuning_links" Content="Leuning links" IsChecked="True" Width="120" Margin="0,0,20,0"
                                      Checked="on_leuning_changed" Unchecked="on_leuning_changed" VerticalAlignment="Center"/>
                            <CheckBox x:Name="leuning_rechts" Content="Leuning rechts" IsChecked="True"
                                      Checked="on_leuning_changed" Unchecked="on_leuning_changed" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Leuning details -->
                        <StackPanel x:Name="leuning_details" Margin="0,10,0,0">
                            <Separator Margin="0,5,0,10"/>
                            <TextBlock Text="Leuning Instellingen" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,8">
                                    <TextBlock Text="Vorm:" FontSize="11"/>
                                    <ComboBox x:Name="leuning_vorm" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,8">
                                    <TextBlock Text="Afmeting (mm):" FontSize="11"/>
                                    <TextBox x:Name="leuning_afmeting" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,8">
                                    <TextBlock Text="Materiaal:" FontSize="11"/>
                                    <ComboBox x:Name="leuning_materiaal" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,8">
                                    <TextBlock Text="Hoogte vanaf trede (mm):" FontSize="11"/>
                                    <TextBox x:Name="leuning_hoogte" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                            
                            <Separator Margin="0,5,0,10"/>
                            <TextBlock Text="Baluster Instellingen" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            
                            <!-- Balusters per zijde -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <CheckBox x:Name="balusters_links" Content="Balusters links" IsChecked="True" Width="120" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                <CheckBox x:Name="balusters_rechts" Content="Balusters rechts" IsChecked="True" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,8">
                                    <TextBlock Text="Vorm:" FontSize="11"/>
                                    <ComboBox x:Name="baluster_vorm" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,8">
                                    <TextBlock Text="Afmeting (mm):" FontSize="11"/>
                                    <TextBox x:Name="baluster_afmeting" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,5,8">
                                    <TextBlock Text="Materiaal:" FontSize="11"/>
                                    <ComboBox x:Name="baluster_materiaal" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="5,0,0,8">
                                    <TextBlock Text="H.o.h. afstand (mm):" FontSize="11"/>
                                    <TextBox x:Name="baluster_hoh" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,5,8">
                                    <TextBlock Text="Offset eerste (mm):" FontSize="11"/>
                                    <TextBox x:Name="baluster_offset_start" FontSize="11"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Grid.Row="2" Margin="5,0,0,8">
                                    <TextBlock Text="Offset laatste (mm):" FontSize="11"/>
                                    <TextBox x:Name="baluster_offset_eind" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Knoppen -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="btn_annuleer" Content="Annuleren" 
                            Width="110" Margin="0,0,10,0" 
                            Click="annuleer"/>
                    <Button x:Name="btn_maak" Content="Maak Trap" 
                            Width="110" Click="maak_trap">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#005A9E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>